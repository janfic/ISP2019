package pack.core.assets

import com.badogic.ashley.core.Sprite

class PlayerSprite extends Closure {
	private String path
	private int width
	private int height
	
	@Override
	def call() {
		new Sprite(new Texture(path), width, height)
	}
	
	PlayerSprite() {
		super(null)
		path = "path/to/sprite.png"
		width = new Width()()
		height = 128
	}
}